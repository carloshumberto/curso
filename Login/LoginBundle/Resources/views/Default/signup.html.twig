{%extends "base.html.twig"%}

{%block titulo%}Curso Inbox: Criar usu√°rio{%endblock%}


{%block stylesheet %}

<style type="text/css">
        body {
            padding-top: 100px;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

        input.parsley-success
        {
            color: #468847 !important;
            background-color: #DFF0D8 !important;
            border: 1px solid #D6E9C6 !important;
        }


        input.parsley-error
        {
            color: #B94A48 !important;
            background-color: #F2DEDE !important;
            border: 1px solid #EED3D7 !important;
            margin-bottom: 0px;
            padding: 0px 0px;
        }


        ul.parsley-error-list
        {
            font-size: 11px;
            font-family: arial;
            margin: -10px;
            margin-bottom: 10px;
            margin-left: 2px;
            list-style-type:none; 
        }

        ul.parsley-error-list li
        {
            line-height: 11px;
        }

    </style>
{%endblock%}

{% block container %}
    <div class="container">

        <form class="form-signin" method="POST" action="{{path('login_login_signup')}}" data-validate="parsley">

            <h2 class="form-signin-heading">Sign Up Form</h2>

            <label>First Name</label>
            <input type="text" class="input-block-level" name="firstname" data-trigger="change" data-minlength="6" data-required="true">
            <label>User Name</label>
            <input type="text" class="input-block-level" name="username" data-trigger="change" data-minlength="6" data-required="true" >
            <label>Password</label>
            <input type="password" class="input-block-level" name="password" data-trigger="change" data-minlength="6" data-required="true">

            <button class="btn" type="submit">OK</button>
            <button class="btn btn-primary" type="button" onclick="window.location.href='{{path('login_login_homepage')}}'">Sign in</button>

        </form>

    </div> <!-- /container -->
{% endblock %}